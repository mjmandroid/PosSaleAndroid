<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/viw_actionbar_layout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_2F2F2F"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_30"
        android:layout_marginTop="@dimen/dp_131"
        android:text="@string/txt_select_login_way"/>

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="@dimen/dp_400"
        android:layout_height="@dimen/dp_130"
        android:layout_marginTop="@dimen/dp_63"
        android:src="@mipmap/ic_navi_input_phone"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"/>
    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="@dimen/dp_400"
        android:layout_height="@dimen/dp_130"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_navi_scan_vip"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_gravity="center_horizontal"/>
    <ImageView
        android:id="@+id/iv_face"
        android:layout_width="@dimen/dp_400"
        android:layout_height="@dimen/dp_130"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_navi_scan_face"/>
    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_47"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_144"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_11"
        android:paddingRight="@dimen/dp_11">
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_21"
            android:src="@mipmap/ic_back"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="@string/txt_back_home"/>
    </LinearLayout>
</LinearLayout>