<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/viw_actionbar_layout"/>
    <android.support.constraint.Group
        android:visibility="gone"
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_tips,tv_title,iv_default"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_009CFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/sp_36"
        android:layout_marginTop="@dimen/dp_145"
        android:text="@string/txt_please_sacn"/>
    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_009CFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:textSize="@dimen/sp_21"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/txt_please_aim"/>
    <ImageView
        android:id="@+id/iv_default"
        android:layout_width="@dimen/dp_255"
        android:layout_height="@dimen/dp_255"
        android:layout_marginTop="@dimen/dp_42"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_scan_aim"
        app:layout_constraintTop_toBottomOf="@id/tv_tips"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_product"
        android:layout_width="@dimen/dp_253"
        android:layout_height="@dimen/dp_217"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_white_r6"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="@dimen/dp_155"
            android:layout_height="@dimen/dp_144"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_21"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_product_big_default"/>
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_product"
            app:layout_constraintRight_toLeftOf="@+id/tv_producrt_price"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/color_202020"
            android:textSize="@dimen/sp_14"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="刺猬阿甘小米锅巴"/>
        <TextView
            android:id="@+id/tv_producrt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_product"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_19"
            android:textColor="@color/color_2F2F2F"
            android:textSize="@dimen/sp_16"
            tools:text="￥19.90"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>