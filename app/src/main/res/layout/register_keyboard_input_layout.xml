<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_input_back"
    android:paddingBottom="@dimen/dp_11"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_num_7"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_input_num"
        android:gravity="center"
        android:tag="7"
        android:text="7"
        android:textColor="@color/black_6"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:id="@+id/tv_num_8"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_num_7"
        android:background="@drawable/shape_input_num"
        android:gravity="center"
        android:tag="8"
        android:text="8"
        android:textColor="@color/black_6"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:id="@+id/tv_num_9"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/tv_num_8"
        android:background="@drawable/shape_input_num"
        android:gravity="center"
        android:tag="9"
        android:text="9"
        android:textColor="@color/black_6"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:id="@+id/tv_clear"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_num_9"
        android:background="@drawable/shape_input_num"
        android:gravity="center"
        android:tag="-1"
        android:text="重输"
        android:textColor="@color/black_6"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/tv_num_4"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/tv_num_7"
        android:background="@drawable/shape_input_num"
        android:gravity="center"
        android:tag="4"
        android:text="4"
        android:textColor="@color/black_6"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:id="@+id/tv_num_5"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/tv_num_8"
        android:layout_toRightOf="@+id/tv_num_4"
        android:background="@drawable/shape_input_num"
        android:gravity="center"
        android:tag="5"
        android:text="5"
        android:textColor="@color/black_6"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:id="@+id/tv_num_6"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/tv_num_9"
        android:layout_toRightOf="@id/tv_num_5"
        android:background="@drawable/shape_input_num"
        android:gravity="center"
        android:tag="6"
        android:text="6"
        android:textColor="@color/black_6"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/tv_clear"
        android:layout_toRightOf="@+id/tv_num_6"
        android:background="@drawable/shape_input_num"
        android:gravity="center"
        android:tag="-2"
        android:text="退格"
        android:textColor="@color/black_6"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/tv_num_1"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/tv_num_4"
        android:background="@drawable/shape_input_num"
        android:gravity="center"
        android:tag="1"
        android:text="1"
        android:textColor="@color/black_6"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:id="@+id/tv_num_2"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/tv_num_5"
        android:layout_toRightOf="@+id/tv_num_1"
        android:background="@drawable/shape_input_num"
        android:gravity="center"
        android:tag="2"
        android:text="2"
        android:textColor="@color/black_6"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:id="@+id/tv_num_3"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/tv_num_6"
        android:layout_toRightOf="@id/tv_num_2"
        android:background="@drawable/shape_input_num"
        android:gravity="center"
        android:tag="3"
        android:text="3"
        android:textColor="@color/black_6"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:id="@+id/tv_num_0"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/tv_num_1"
        android:background="@drawable/shape_input_num"
        android:gravity="center"
        android:tag="0"
        android:text="0"
        android:textColor="@color/black_6"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:id="@+id/tv_num_00"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/tv_num_2"
        android:layout_toRightOf="@+id/tv_num_0"
        android:background="@drawable/shape_input_num"
        android:gravity="center"
        android:tag="00"
        android:text="00"
        android:textColor="@color/black_6"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:id="@+id/tv_num_"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/tv_num_3"
        android:layout_toRightOf="@id/tv_num_00"
        android:background="@drawable/shape_input_num"
        android:gravity="center"
        android:tag="."
        android:text="."
        android:textColor="@color/black_6"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/tv_delete"
        android:layout_toRightOf="@id/tv_num_6"
        android:background="@drawable/shape_input_ok"
        android:gravity="center"
        android:tag="-3"
        android:text="确认"
        android:textColor="@color/white_1"
        android:textSize="@dimen/sp_25" />

</RelativeLayout>